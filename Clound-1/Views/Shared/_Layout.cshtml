@using Clound_1.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clound_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    
    

   

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clound_1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cloud" asp-action="Index">Облочность</a>
                        </li>
                    </ul>
                </div>

                <div class="volume-control ms-auto d-flex align-items-center">
                    <label for="volumeSlider" class="me-1" style="font-size: 1.2rem;">🔊</label>
                    <input type="range" id="volumeSlider" min="0" max="1" step="0.01" value="0.7" style="width: 100px;">
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid h-100 d-flex flex-column">
        <div class="row flex-grow-1 g-0">
            <!-- Левая колонка с погодой (на всю высоту) -->
            <div class="col-md-3 sidebar d-flex flex-column">
                @await Html.PartialAsync("_WeatherWidget", (WeatherModel)ViewBag.Weather)
            </div>
            <!-- Правая колонка с основным контентом -->
            <div class="col-md-9 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/music-player.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<!-- Скрытый аудиоплеер -->
<audio id="bg-music" loop style="display: none;"></audio>


</html>
